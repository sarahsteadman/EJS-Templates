<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>

        <p><%- messages() %></p>

        <div id="inv-management">
            <h2>Welcome <%= locals.accountData.account_firstname %>!</h2>
            <div class="account-links">
                <% if (locals.accountData.account_type=='Admin' || locals.accountData.account_type=='Employee' ) { %>
                    <a href="/inv/" class="account-a">Inventory Management</a>
                    <% } %>
                        <a href="/account/update/" class="account-a">Update Account Information</a>
            </div>
            <% if (userId < 4) { %>
                <% if (locals.messageCount) { %>
                    <p class="message-count">
                        <%= locals.messageCount %> Unread Messages
                    </p>
                    <% } %>
                        <a title="View Messages" href="/messages"> Inbox &#x2709; </a>
                        <% } %>
        </div>