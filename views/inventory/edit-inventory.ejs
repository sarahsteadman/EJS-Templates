<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>
        <p>
            <%- messages() %>
                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
        </p>

        <form action="/inv/update" method="POST" id="updateForm">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" maxlength="50" pattern="[A-Za-z0-9\s\-']+"
                title="Make can contain letters, numbers, spaces, hyphens, and apostrophes only."
                value="<%= inv_make %>" required><br>

            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" maxlength="50" pattern="[A-Za-z0-9\s\-']+"
                title="Model can contain letters, numbers, spaces, hyphens, and apostrophes only."
                value="<%= inv_model %>" required><br>

            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" min="1886" max="2100" value="<%= inv_year %>"
                required><br>

            <label for="inv_description">Description:</label>
            <textarea id="inv_description" name="inv_description" maxlength="500"
                required><%= inv_description %></textarea><br>

            <label for="inv_image">Image:</label>
            <input type="text" id="inv_image" name="inv_image" value="/images/vehicles/no-image.png" required><br>

            <label for="inv_thumbnail">Thumbnail:</label>
            <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="/images/vehicles/no-image-tn.png"
                required><br>

            <label for="inv_price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" step="0.01" maxlength="50" value="<%= inv_price %>"
                required><br>

            <label for="inv_miles">Miles:</label>
            <input type="number" id="inv_miles" name="inv_miles" maxlength="50" value="<%= inv_miles %>" required><br>

            <label for="inv_color">Color:</label>
            <input type="text" id="inv_color" name="inv_color" maxlength="30" pattern="[A-Za-z0-9\s\-']+"
                title="Color can contain letters, numbers, spaces, hyphens, and apostrophes only."
                value="<%= inv_color %>" required><br>

            <label for="classificationList">Classification:</label>
            <%- classifications %>


                <input type="submit" value="Update Vehicle" id="submitBtn" disabled>
                <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                    <% } %>>
        </form>
        <script src="../../js/inv-update.js"></script>