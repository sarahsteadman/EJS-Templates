<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>
        <p>
            <%- messages() %>
                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
        </p>

        <form action="/inv/addInventory" method="POST">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" maxlength="50" pattern="[A-Za-z0-9\s\-']+"
                title="Make can contain letters, numbers, spaces, hyphens, and apostrophes only." required
                value="<%= locals.inv_make %>"><br>

            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" maxlength="50" pattern="[A-Za-z0-9\s\-']+"
                title="Model can contain letters, numbers, spaces, hyphens, and apostrophes only." required
                value="<%= locals.inv_model %>"><br>

            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" min="1886" max="2100" required
                value="<%= locals.inv_year %>"><br>

            <label for="inv_description">Description:</label>
            <textarea id="inv_description" name="inv_description" maxlength="500"
                required><%= locals.inv_description %></textarea><br>

            <label for="inv_image">Image:</label>
            <input type="text" id="inv_image" name="inv_image" required
                value="<%= locals.inv_image || 'images/vehicles/no-image.png' %>"><br>

            <label for="inv_thumbnail">Thumbnail:</label>
            <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
                value="<%= locals.inv_thumbnail || 'images/vehicles/no-image-tn.png' %>"><br>

            <label for="inv_price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" step="0.01" required
                value="<%= locals.inv_price %>"><br>

            <label for="inv_miles">Miles:</label>
            <input type="number" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>"><br>

            <label for="inv_color">Color:</label>
            <input type="text" id="inv_color" name="inv_color" maxlength="30" pattern="[A-Za-z0-9\s\-']+"
                title="Color can contain letters, numbers, spaces, hyphens, and apostrophes only." required
                value="<%= locals.inv_color %>"><br>

            <label for="classificationList">Classification:</label>
            <%- classifications %>

                <input type="submit">
        </form>