<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>
        <p>
            <%- messages() %>
                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
        </p>
        <p class="delete-msg">Confirm Deletion - The delete is permanent.</p>
        <form action="/inv/delete" method="POST" id="deleteForm">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" maxlength="50" pattern="[A-Za-z0-9\s\-']+"
                title="Make can contain letters, numbers, spaces, hyphens, and apostrophes only."
                value="<%= inv_make %>" readonly><br>

            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" maxlength="50" pattern="[A-Za-z0-9\s\-']+"
                title="Model can contain letters, numbers, spaces, hyphens, and apostrophes only."
                value="<%= inv_model %>" readonly><br>

            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" min="1886" max="2100" value="<%= inv_year %>"
                readonly><br>
            <label for="inv_price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" step="0.01" maxlength="50" value="<%= inv_price %>"
                readonly><br>

            <input type="submit" value="Delete Vehicle" id="submitBtn">
            <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                <% } %>>
        </form>